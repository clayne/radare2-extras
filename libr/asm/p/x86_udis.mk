CFLAGS_UDIS86=$(CFLAGS)
CFLAGS_UDIS86+=-I../arch/x86

OBJ_X86_UDIS86=arch_x86_udis.o
SRC_X86_UDIS86=../arch/x86/udis86/*.c

STATIC_OBJ+=${OBJ_X86_UDIS86}
TARGET_X86_UDIS86=arch_x86_udis.${LIBEXT}

ALL_TARGETS+=${TARGET_X86_UDIS86}

$(OBJ_X86_UDIS86): %.o : %.c
	$(CC) -c $(CFLAGS_UDIS86) $< -o $@

${TARGET_X86_UDIS86}: ${OBJ_X86_UDIS86}
	${CC} $(call libname,arch_x86_udis) ${LDFLAGS} ${CFLAGS_UDIS86} -o ${TARGET_X86_UDIS86} ${OBJ_X86_UDIS86} ${SRC_X86_UDIS86}
